<h1>Expenses</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <div>
            <th>
              <h3>Date</h3>
            </th>
          </div>
          <div>
            <th>
              <h3>Description</h3>
            </th>
          </div>
          <div>
            <th>
              <h3>Amount</h3>
            </th>
          </div>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
            <div>
              <td>
                <h3><%= expense.date.strftime("%e %b %Y") %></h3>
              </td>
            </div>
            <div>
              <td>
                <h3><%= expense.description %></h3>
              </td>
            </div>
            <div>
              <td> 
                <h3>
                  <% if (expense.amount % expense.amount == 0) %>
                    £ <%= expense.amount.to_i %>
                  <% else %>
                    £ <%= expense.amount %>
                  <%end%>
                </h3>
              </td>
            </div>
            <td><%= link_to 'Edit', edit_expense_path(expense), class:"btn btn-warning btn-lg" %></td>
            <td><%= link_to 'Delete', expense, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-lg" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
      <%= link_to 'New Expense', new_expense_path, class:"btn btn-primary navbar-btn btn-lg"%>
      <%= link_to 'Clear debt', delete_all_expenses_path, class:"btn btn-danger navbar-btn btn-lg" %>
  </div>



